{
  "id": "com.autodeck.period.bar.chart",
  "name": "Period Bar Chart",
  "description": "Period Bar Chart with Label and Color control",
  "newInstancePrefix": "periodBarChart",
  "version": "1.0.0",
  "vendor": "autodeck.com",
  "eula": "autodeck.com",
  "license": "MIT",
  "icon": "https://cdn.jsdelivr.net/gh/JSKowontan/periodBarChart/barChartIcon.png",
  "imports": [
    "datasource",
    "planning-model"
  ],
  "webcomponents": [
    {
      "kind": "main",
      "tag": "period-bar-chart",
      "url": "https://cdn.jsdelivr.net/gh/JSKowontan/periodBarChart/periodBarChart.js",
      "integrity": "sha256-/2PiAchEMHJoblOrhaxEsXlNNfCq6aEjUiLZktej7As=",
      "ignoreIntegrity": false
    },
    {
      "kind": "builder",
      "tag": "period-bar-chart-builder",
      "url": "https://cdn.jsdelivr.net/gh/JSKowontan/periodBarChart/periodBarChart.js",
      "integrity": "sha256-/2PiAchEMHJoblOrhaxEsXlNNfCq6aEjUiLZktej7As=",
      "ignoreIntegrity": false
    }
  ],
  "properties": {
    "chartData": {
      "type": "string",
      "description": "JSON Data Array",
      "default": ""
    },
    "measureName": {
      "type": "string",
      "description": "Name of measure for tooltip",
      "default": ""
    },
    "barColor": {
      "type": "string",
      "description": "Hex color code",
      "default": "#d3d3d3"
    },
    "barWidth": {
      "type": "integer",
      "description": "Width percentage (1-100)",
      "default": 20
    },
    "showLabels": {
      "type": "boolean",
      "description": "Show Axis Labels",
      "default": false
    },
    "width": {
      "type": "integer",
      "default": 600
    },
    "height": {
      "type": "integer",
      "default": 300
    }
  },
  "methods": {
    "setChartData": {
      "description": "Sets the chart data JSON",
      "parameters": [
        {
          "name": "RecordsArray",
          "type": "Selection[]",
          "description": "JSON String like [{'year':'2025', 'period':'Q1', 'value': '100', 'currency':'USD'}]"
        }
      ]
    }
  },
  "events": {
    "onBarClick": {
      "description": "Triggered when a bar is clicked"
    }
  }
}
